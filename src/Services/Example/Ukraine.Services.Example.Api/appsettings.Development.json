{
  "UkraineEventBus": {
    "PubSubName": "ukraine-pubsub"
  },
  "UkraineLogging": {
    "ServiceName": "service-example-api",
    "MinimumLevel": "Debug",
    "Override": {
      "Microsoft": "Information"
    },
    "WriteTo": {
      "SeqServerUrl": "http://localhost:5341"
    }
  },
  "UkraineTelemetry": {
    "ServiceName": "service-example-api",
    "Instrumentation": {
      "SqlClient": true,
      "HotChocolate": true
    },
    "Exporter": {
      "Zipkin": "http://localhost:9411/api/v2/spans"
    }
  },
  "UkrainePostgres": {
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true,
    "MigrationsSchema" : "ukraine_example"
  },
  "UkraineGraphQl": {
    "EnableInstrumentation": true,
    "ExecutionMaxDepth": 10,
    "EnableBananaCakePop": true,
    "EnableAuthorization": true
  },
  "UkraineAuthorization": {
    "Policies": [
      {
        "Name": "ApiSwaggerScope",
        "Scopes": [ "API_SWAGGER_EXAMPLE_SCOPE" ]
      },
      {
        "Name": "ApiGraphQlScope",
        "Scopes": [ "API_GRAPHQL_EXAMPLE_SCOPE" ]
      }
    ]
  },
  "UkraineJwtAuthentication": {
    "Authority": "http://localhost:7002",
    "Audience" : "service-example-api",
    "RequireHttps": false
  },
  "UkraineSwagger": {
    "ServiceTitle": "Example API",
    "OAuth2Security": {
      "ClientId": "service-example-api-swagger",
      "ClientName": "service-example-api",
      "AuthorizationUrl" : "http://localhost:7002/connect/authorize",
      "TokenUrl": "http://localhost:7002/connect/token",
      "Scopes": {
        "API_SWAGGER_EXAMPLE_SCOPE": "Access to Swagger API"
      }
    }
  }
}