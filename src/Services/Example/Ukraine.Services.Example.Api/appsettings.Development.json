{
  "ConnectionStrings": {
    "Postgres": "Server=localhost;Port=5432;Database=ukraine;User Id=postgres;Password=postgres;"
  },
  "CustomLogging": {
    "MinimumLevel": "Debug",
    "Override": {
      "Microsoft": "Information"
    },
    "WriteToConsole": true,
    "WriteToSeqServerUrl": "http://localhost:5341"
  },
  "Telemetry": {
    "ZipkinServerUrl": "http://localhost:9411/api/v2/spans",
    "RecordSqlException": true
  },
  "Database": {
    "RetryOnFailureCount": 3,
    "RetryOnFailureDelay": "0:00:05",
    "SensitiveDataLogging": true,
    "DetailedErrors": true
  },
  "GraphQl": {
    "Path": "/graphql",
    "VoyagerPath": "/graphql/voyager",
    "IncludeExceptionDetails": true,
    "UseIntrospection": true,
    "UseInstrumentation": true,
    "DefaultPageSize": 100,
    "MaxPageSize": 10,
    "MaxDepth": 10
  },
  "Identity": {
    "Authority": "http://localhost:7002",
    "Audience" : "service-example-api",
    "RequireHttps": false,
    "Policies": [
      {
        "Name": "ApiScope",
        "Scopes": [ "API_EXAMPLE_SCOPE" ]
      }
    ]
  },
  "Swagger": {
    "OAuthClientId": "service-example-api-swagger",
    "AuthScopes": [
      "API_EXAMPLE_SCOPE"
    ]
  }
}