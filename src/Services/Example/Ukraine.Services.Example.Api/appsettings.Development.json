{
  "UkraineEventBus": {
    "PubSubName": "ukraine-pubsub"
  },
  "UkraineLogging": {
    "ServiceName": "service-example-api",
    "MinimumLevel": "Debug",
    "Override": {
      "Microsoft": "Information"
    },
    "WriteTo": {
      "SeqServerUrl": "http://localhost:5341"
    }
  },
  "UkraineTelemetry": {
    "ServiceName": "service-example-api",
    "Instrumentation": {
      "SqlClient": true,
      "HotChocolate": true
    },
    "Exporter": {
      "Zipkin": "http://localhost:9411/api/v2/spans"
    }
  },
  "UkrainePostgres": {
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true,
    "MigrationsSchema" : "ukraine_example"
  },
  "GraphQl": {
    "Path": "/graphql",
    "EnableIntrospection": true,
    "EnableExceptionDetails": true,
    "ExecutionMaxDepth": 100,
    "EnableSchemaRequests": true,
    "EnableGetRequests": true,
    "EnableMultipartRequests": true,
    "EnableBananaCakePop": true,
    "EnableBatching": false,
    "ExecutionTimeout": "00:00:30",
    "Paging": {
      "MaxPageSize": 100,
      "DefaultPageSize": 10,
      "IncludeTotalCount": true,
      "AllowBackwardPagination": false
    }
  },
  "Authentication": {
    "Authority": "http://localhost:7002"
  },
  "UkraineSwagger": {
    "ServiceTitle": "Example API",
    "OAuth2Security": {
      "ClientId": "service-example-api-swagger",
      "ClientName": "service-example-api",
      "AuthorizationUrl" : "http://localhost:7002/connect/authorize",
      "TokenUrl": "http://localhost:7002/connect/token",
      "Scopes": {
        "API_REST_EXAMPLE_SCOPE": "Access to REST API"
      }
    }
  }
}