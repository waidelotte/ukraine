{
  "ConnectionStrings": {
    "ConfigurationDbConnection": "Server=localhost;Port=5432;Database=ukraine_identity;User Id=postgres;Password=postgres;",
    "PersistedGrantDbConnection": "Server=localhost;Port=5432;Database=ukraine_identity;User Id=postgres;Password=postgres;",
    "IdentityDbConnection": "Server=localhost;Port=5432;Database=ukraine_identity;User Id=postgres;Password=postgres;",
    "AdminLogDbConnection": "Server=localhost;Port=5432;Database=ukraine_identity;User Id=postgres;Password=postgres;",
    "AdminAuditLogDbConnection": "Server=localhost;Port=5432;Database=ukraine_identity;User Id=postgres;Password=postgres;",
    "DataProtectionDbConnection": "Server=localhost;Port=5432;Database=ukraine_identity;User Id=postgres;Password=postgres;"
  },
  "SeedConfiguration": {
    "ApplySeed": true
  },
  "DatabaseMigrationsConfiguration": {
    "ApplyDatabaseMigrations": true
  },
  "DatabaseProviderConfiguration": {
    "ProviderType": "PostgreSQL"
  },
  "AdminConfiguration": {
    "PageTitle": "Ukraine Identity",
    "FaviconUri": "~/favicon.ico",
    "IdentityAdminRedirectUri": "http://localhost:7003/signin-oidc",
    "IdentityServerBaseUrl": "http://localhost:7002",
    "IdentityAdminCookieName": "IdentityServerAdmin",
    "IdentityAdminCookieExpiresUtcHours": 6,
    "RequireHttpsMetadata": false,
    "TokenValidationClaimName": "name",
    "TokenValidationClaimRole": "role",
    "ClientId": "admin-client",
    "ClientSecret": "admin_local_secret",
    "OidcResponseType": "code",
    "Scopes": [
      "openid",
      "profile",
      "email",
      "roles"
    ],
    "AdministrationRole": "admin",
    "HideUIForMSSqlErrorLogging": false
  },
  "SecurityConfiguration": {
    "CspTrustedDomains": [
      "fonts.googleapis.com",
      "fonts.gstatic.com",
      "www.gravatar.com"
    ]
  },
  "AuditLoggingConfiguration": {
    "Source": "IdentityServer.Admin.Web",
    "SubjectIdentifierClaim": "sub",
    "SubjectNameClaim": "name",
    "IncludeFormVariables": false
  },
  "HttpConfiguration": {
    "BasePath": ""
  },
  "IdentityOptions": {
    "Password": {
      "RequiredLength": 4,
      "RequiredUniqueChars": 0,
      "RequireNonAlphanumeric": false,
      "RequireLowercase": false,
      "RequireUppercase": false,
      "RequireDigit": false
    },
    "User": {
      "RequireUniqueEmail": true
    },
    "SignIn": {
      "RequireConfirmedAccount": false,
      "RequireConfirmedPhoneNumber": false,
      "RequireConfirmedEmail": false
    }
  },
  "IdentityData": {
    "Roles": [
      {
        "Name": "admin"
      }
    ],
    "Users": [
      {
        "Username": "admin",
        "Password": "admin",
        "Email": "admin@localhost.com",
        "Roles": [
          "admin"
        ],
        "Claims": [
          {
            "Type": "name",
            "Value": "admin"
          }
        ]
      }
    ]
  },
  "IdentityServerData": {
    "IdentityResources": [
      {
        "Name": "roles",
        "Enabled": true,
        "DisplayName": "Roles",
        "UserClaims": [
          "role"
        ]
      },
      {
        "Name": "openid",
        "Enabled": true,
        "Required": true,
        "DisplayName": "User identifier",
        "UserClaims": [
          "sub"
        ]
      },
      {
        "Name": "profile",
        "Enabled": true,
        "DisplayName": "User profile",
        "Emphasize": true,
        "UserClaims": [
          "name",
          "family_name",
          "given_name",
          "middle_name",
          "nickname",
          "preferred_username",
          "profile",
          "picture",
          "website",
          "gender",
          "birthdate",
          "zoneinfo",
          "locale",
          "updated_at"
        ]
      },
      {
        "Name": "email",
        "Enabled": true,
        "DisplayName": "Email address",
        "Emphasize": true,
        "UserClaims": [
          "email",
          "email_verified"
        ]
      },
      {
        "Name": "address",
        "Enabled": true,
        "DisplayName": "Address",
        "Emphasize": true,
        "UserClaims": [
          "address"
        ]
      }
    ],
    "ApiScopes": [
      {
        "Name": "service-example-rest-scope",
        "DisplayName": "service-example-rest-scope"
      },
      {
        "Name": "service-example-graphql-scope",
        "DisplayName": "service-example-graphql-scope",
        "UserClaims": [
          "role"
        ]
      }
    ],
    "ApiResources": [
      {
        "Name": "service-example-api",
        "Scopes": [
          "service-example-rest-scope",
          "service-example-graphql-scope"
        ]
      }
    ],
    "Clients": [
      {
        "ClientId": "admin-client",
        "ClientName": "admin-client",
        "ClientUri": "http://localhost:7003",
        "AllowedGrantTypes": [
          "authorization_code"
        ],
        "RequirePkce": true,
        "ClientSecrets": [
          {
            "Value": "admin_local_secret"
          }
        ],
        "RedirectUris": [
          "http://localhost:7003/signin-oidc"
        ],
        "FrontChannelLogoutUri": "http://localhost:7003/signout-oidc",
        "PostLogoutRedirectUris": [
          "http://localhost:7003/signout-callback-oidc"
        ],
        "AllowedCorsOrigins": [
          "http://localhost:7003"
        ],
        "AllowedScopes": [
          "openid",
          "email",
          "profile",
          "roles"
        ]
      },
      {
        "ClientId": "service-example-rest-swagger",
        "ClientName": "service-example-rest-swagger",
        "ClientUri": "http://localhost:7004",
        "AllowedGrantTypes": [
          "implicit"
        ],
        "AllowAccessTokensViaBrowser": true,
        "RedirectUris": [
          "http://localhost:7004/swagger/oauth2-redirect.html"
        ],
        "PostLogoutRedirectUris": [
          "http://localhost:7004/swagger/"
        ],
        "AllowedCorsOrigins": [
          "http://localhost:7004"
        ],
        "AllowedScopes": [
          "service-example-rest-scope"
        ]
      },
      {
        "ClientId": "service-example-graphql",
        "ClientName": "service-example-graphql",
        "ClientUri": "http://localhost:7004",
        "AllowedGrantTypes": [
          "authorization_code"
        ],
        "RequirePkce": true,
        "ClientSecrets": [
          {
            "Value": "local_secret"
          }
        ],
        "RedirectUris": [
          "http://localhost:7004/graphql/#/oauth",
          "http://localhost:7004/graphql"
        ],
        "PostLogoutRedirectUris": [
          "http://localhost:7004/graphql"
        ],
        "AllowedCorsOrigins": [
          "http://localhost:7004"
        ],
        "AllowedScopes": [
          "service-example-graphql-scope"
        ]
      }
    ]
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "PostgresServer",
        "Args": {
          "connectionString": "Server=localhost;Port=5432;Database=ukraine_identity;User Id=postgres;Password=postgres;",
          "tableName": "Log",
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ],
            "removeStandardColumns": [ "Properties" ]
          }
        }
      }
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Error"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName", "WithProperty" ],
    "Properties": {
      "ServiceName": "service-identity"
    }
  }
}